		"vite": "^5.0.3",
		"wrangler": "^3.74.0"
	},
	"type": "module",
	"dependencies": {
		"@tidbcloud/serverless": "^0.2.0",
		"bits-ui": "^0.21.13",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.33.0",
		"mode-watcher": "^0.4.1",
		"svelte-radix": "^1.1.1",
		"tailwind-merge": "^2.5.2",
		"tailwind-variants": "^0.2.1",
		"zod": "^3.23.8",
		"zod-form-data": "^2.0.2"
	}
